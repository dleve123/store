- if notice
  %p
    #notice
      =notice

=image_tag(@product.image_url, class: 'list_image')
%p
  %b Title:
  = @product.title

%p
  %b Description:
  = @product.description

-# %p
  %b Image url:
  =@product.image_url

%p
  %b Price:
  = number_to_currency(@product.price, :unit => "$")

%p
  %b Hot?
  = @product.hottness

= link_to 'Edit', edit_product_path(@product)
= link_to 'Back', products_path
